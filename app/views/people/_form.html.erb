
<%= form_with model: person do |form| %>
    <section class="mb-3 border rounded-5 p-3" id="name-section">
        <h3 class="form-label">Name</h3>

        <article class="mb-3 d-flex">
                <%= form.select :salutation, ["Mr.", "Ms.", "Mrs.", "Lord", "Lady"], class:"form-control w-auto mx-1" %>

                <%= form.label "First", class: "d-none" %>
                <%= form.text_field :firstname, class:"form-control", placeholder: "First" %>
                <% person.errors.full_messages_for(:firstname).each do |message| %>
                    <div><%= message %></div>
                <% end %>
        </article>

        <article class="mb-3 col">
            <%= form.label "Middle", class: "d-none" %>
            <%= form.text_field :middlename, class:"form-control", placeholder: "Middle (optional)" %>
            <% person.errors.full_messages_for(:middlename).each do |message| %>
                <div><%= message %></div>
            <% end %>
        </article>

        <article class="mb-3 col">
            <%= form.label "Last", class: "d-none" %>
            <%= form.text_field :lastname, class:"form-control", placeholder: "Last" %>
            <% person.errors.full_messages_for(:lastname).each do |message| %>
                <div><%= message %></div>
            <% end %>
        </article>
    </section>

    <section class="mb-3 border rounded-5 p-3" id="details-section">
        <h3>Details</h3>
        <div class="row">
            <article class="mb-3 col-7">
                <%= form.label :ssn, class: "d-none" %>
                <%= form.text_field :ssn, class:"form-control text-center", placeholder: "S-S-N" %>
                <% person.errors.full_messages_for(:ssn).each do |message| %>
                    <div><%= message %></div>
                <% end %>
            </article>

            <article class="mb-3 col-5">
                <%= form.label "Birth date", class: "d-none" %>
                <%= form.date_select :dob, class:"form-control text-center" %>
                <% person.errors.full_messages_for(:dob).each do |message| %>
                    <div><%= message %></div>
                <% end %>
            </article>
        </div>
    </section>

    <section class="mb-3 border rounded-5 p-3" id="comment-section">
        <%= form.label :comment, class: "form-label h3" %>
        <%= form.text_field :comment, class:"form-control" %>
        <% person.errors.full_messages_for(:comment).each do |message| %>
            <div><%= message %></div>
        <% end %>
    </section>

    <section id="submit-section" class="px-3">
        <%= form.submit class:"btn btn-dark w-100" %>
    </section>
<% end %>