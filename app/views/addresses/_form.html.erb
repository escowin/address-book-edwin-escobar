<%= form_with model: [ @person, @person.addresses.build ] do |form| %>
    <article class="container">
        <%= form.label :street %>
        <%= form.text_field :street, class:"form-control" %>
    </article>

    <article class="container">
        <%= form.label :town, "City" %>
        <%= form.text_field :town, class:"form-control" %>
    </article>

    <article class="container d-flex">
        <div class="w-25">
            <%= form.label :state %>
            <%= form.text_field :state, class:"form-control" %>
        </div>

        <div class="w-25 mx-2">
            <%= form.label :zipcode, "Zip code" %>
            <%= form.text_field :zipcode, class:"form-control" %>
        </div>

        <div class="w-auto">
            <%= form.label :country %>
            <%= form.text_field :country, class:"form-control" %>
        </div>
    </article>

    <article class="py-3 px-2">
        <%= form.submit class:"btn btn-dark w-100" %>
    </article>
<% end %>