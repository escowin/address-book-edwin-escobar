<%= form_with model: user, url: sign_up_path do |form| %>
    <section class="container d-flex flex-column align-items-center border rounded-5 p-3 my-4 w-75">
        <h1>Sign up</h1>
        <% if user.errors.any? %>
            <article class="alert alert-danger w-75">
                <% user.errors.full_messages.each do |message| %>
                    <p class="m-0"><%= message %></p>
                <% end %>
            </article>
        <% end %>
        <article class="mb-3 w-75">
            <%= form.label "Email", class: "form-label h3" %>
            <%= form.text_field :email, placeholder: "user@email.com", class:"form-control" %>
        </article>

        <article class="mb-3 w-75">
            <%= form.label "Password", class: "form-label h3" %>
            <%= form.password_field :password, placeholder: "Password", class:"form-control" %>
        </article>

        <article class="mb-3 w-75">
            <%= form.label "Confirm password", class: "form-label h3" %>
            <%= form.password_field :password_confirmation, placeholder: "Password", class:"form-control" %>
        </article>

        <article class="mb-3 w-75">
            <%= form.submit class:"btn btn-dark w-100" %>
        </article>
    </section>
<% end %>